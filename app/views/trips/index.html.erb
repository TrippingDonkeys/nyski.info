<h1>Show Available Trips</h1>

<% @trips.each do |trip| %>
	<% if trip.status == "pending" %>
		<h2><%= trip.name %></h2>
		<p><%= trip.description %></p>
		<p><%= trip.start_date %></p>
		<p><%= trip.end_date %></p>
		<p><%= trip.ski_location.name %></p>
		<p><%= link_to 'Show', trip_path(trip) %></p>		
		<%= form_tag("/invitations", id:"create-invitation", :method => "get", :'trip_id' => trip.id) do %>
			<%= submit_tag "JOIN this AWESOME TRIP!" %>
		<% end %>
	<% end %>
<% end %>
